# screenshot
# Print      -> cut fullscreen to clipoard
bindsym --release Print exec --no-startup-id scrot -q 80 -e 'xclip -selection clipoard -t "image/png" $f && rm $f'
# Win+Print  -> save fullscreen in ~/picture/screenshot
bindsym --release Mod4+Print exec --no-startup-id scrot -q 80 "$HOME"'/picture/screenshot/%Y-%m-%d-%H%M%S_$wx$h_scrot.png'
# Ctrl+Alt+A ->  cut selected screen area to clipoard
bindsym --release Control+Mod1+a exec --no-startup-id scrot -s -q 80 -e 'xclip -selection clipoard -t "image/png" $f && rm $f'
# Ctrl+Alt+W ->  cut selected screen windows to clipoard
bindsym --release Control+Mod1+w exec --no-startup-id scrot -sb -q 80 -e 'xclip -selection clipoard -t "image/png" $f && rm $f'

